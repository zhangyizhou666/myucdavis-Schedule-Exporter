{
  "manifest_version": 3,
  "name": "Aggie Schedule Mate",
  "version": "2.1.1",
  "description": "Export UC Davis schedule to calendar with conflict detection, color coding, and RateMyProfessor integration",
  "permissions": [
    "activeTab",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "*://*.ucdavis.edu/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [{
    "matches": ["*://*.ucdavis.edu/*"],
    "js": ["content.js"],
    "css": ["styles.css"],
    "run_at": "document_idle"
  }],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [{
    "resources": ["uc_davis_professors.json", "uc_davis_legacyIds.json"],
    "matches": ["*://*.ucdavis.edu/*"]
  }]
}